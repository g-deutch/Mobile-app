<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.editExcercise">

    <TextView
        android:id="@+id/muscle_text"
        android:layout_width="392dp"
        android:layout_height="58dp"
        android:text="Muscle:"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/favorite_switch"
        app:layout_constraintHorizontal_bias="0.467"
        app:layout_constraintStart_toEndOf="@+id/active_switch"
        app:layout_constraintTop_toBottomOf="@+id/equipment_text" />

    <TextView
        android:id="@+id/equipment_text"
        android:layout_width="392dp"
        android:layout_height="58dp"
        android:text="Equipment:"
        android:textAlignment="textStart"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/favorite_switch"
        app:layout_constraintHorizontal_bias="0.472"
        app:layout_constraintStart_toEndOf="@+id/active_switch"
        app:layout_constraintTop_toBottomOf="@+id/level_text" />

    <TextView
        android:id="@+id/exerciseName"
        android:layout_width="0dp"
        android:layout_height="75dp"
        android:text="tempText"
        android:textAlignment="center"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/active_switch"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:checked="false"
        android:text="Active"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/favorite_switch"
        app:layout_constraintHorizontal_bias="0.026"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exerciseName" />

    <Switch
        android:id="@+id/favorite_switch"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:checked="false"
        android:showText="false"
        android:text="Favorite"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/exerciseName" />

    <TextView
        android:id="@+id/level_text"
        android:layout_width="181dp"
        android:layout_height="46dp"
        android:text="Level: "
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintEnd_toStartOf="@+id/favorite_switch"
        app:layout_constraintStart_toEndOf="@+id/active_switch"
        app:layout_constraintTop_toBottomOf="@+id/exerciseName" />

    <ImageView
        android:id="@+id/workout_image"
        android:layout_width="491dp"
        android:layout_height="160dp"
        android:src="@drawable/ic_launcher_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.478"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/muscle_text" />

    <Button
        android:id="@+id/back_button6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>